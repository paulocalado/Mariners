<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageJogadorDialog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtNomeDialog"
        android:layout_below="@+id/imageJogadorDialog"
        android:layout_alignLeft="@+id/imageJogadorDialog"
        android:layout_alignStart="@+id/imageJogadorDialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtPosicaoDialog"
        android:layout_below="@+id/txtNomeDialog"
        android:layout_alignLeft="@+id/txtNomeDialog"
        android:layout_alignStart="@+id/txtNomeDialog" />
</RelativeLayout>
